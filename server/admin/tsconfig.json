{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
